/**
 * An example usage:
 * 
 * <pre>
 * mvn compile exec:java \
 -Dexec.mainClass=com.google.cloud.teleport.templates.${PIPELINE_NAME} \
 -Dexec.cleanupDaemonThreads=false \
 -Dexec.args=" \
 --project=${PROJECT_ID} \
 --stagingLocation=gs://${PROJECT_ID}/dataflow/pipelines/${PIPELINE_FOLDER}/staging \
 --tempLocation=gs://${PROJECT_ID}/dataflow/pipelines/${PIPELINE_FOLDER}/temp \
 --runner=DataflowRunner \
 --windowDuration=2m \
 --numShards=1 \
 --inputTopic=projects/${PROJECT_ID}/topics/windowed-files \
 --outputDirectory=gs://${PROJECT_ID}/temp/ \
 --outputFilenamePrefix=windowed-file \
 --outputFilenameSuffix=.txt"
 * </pre>
 */

mvn -Pdataflow-runner compile exec:java \
      -Dexec.mainClass=org.ambrite.josh.bioStatsPipe \
      -Dexec.args="--project=ambrite \
      --stagingLocation=gs://biostats-pipeline-data/staging/ \
      --runner=DataflowRunner"

mvn  -Pdataflow-runner compile exec:java \
      -Dexec.mainClass=org.ambrite.josh.bioStatsPipe \
      -Dexec.cleanupDaemonThreads=false \
      -Dexec.args=" \
            --project=ambrite \
            --stagingLocation=gs://biostats-pipeline-data/staging \
            --tempLocation=gs://biostats-pipeline-data/temp \
            --runner=DataflowRunner \
            --windowDuration=2m \
            --numShards=1 \
            --inputTopic=projects/ambrite/topics/bio-stats-topic \
            --outputDirectory=gs://biostats-pipeline-data/output \
            --outputFilenamePrefix=windowed-file \
            --outputFilenameSuffix=.txt"






mvn  -Pdataflow-runner compile exec:java \
      -Dexec.mainClass=org.ambrite.josh.bioStatsPipe \
      -Dexec.cleanupDaemonThreads=false \
      -Dexec.args=" \
            --project=ambrite \
            --stagingLocation=gs://biostats-pipeline-data/staging \
            --tempLocation=gs://biostats-pipeline-data/temp \
            --runner=DataflowRunner \
            --inputTopic=projects/ambrite/topics/bio-stats-topic \
            --invalidOutputTopic=projects/ambrite/topics/bio-stats-invalid \
            --validOutputTopic=projects/ambrite/topics/bio-stats-output-topic"